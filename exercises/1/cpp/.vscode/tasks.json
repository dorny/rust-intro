{
    "version": "0.1.0",
    "command": "env",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "build",
            "args": [
                "clang++",
                "-std=c++11",
                "-lpthread",
                "-g","main.cpp",
                "-o","run"
            ]
        },
        {
            "taskName": "test",
            "args": ["./run"]
        }
    ]
}